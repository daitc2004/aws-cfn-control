{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "create an s3 bucket",
  "Resources": {
    "MyBucket": {
      "Type" : "AWS::S3::Bucket",
      "Properties": {
        "AccessControl"    : "BucketOwnerRead",
        "BucketName"       : { "Ref" : "MyBucketName" }
      }
    }
  },
  "Parameters": {
    "MyBucketName": {
      "Description" : "s3 bucket for read access only",
      "Type" : "String"
    },
  "Outputs" : {
    "BucketName" : {
      "Value" : { "Ref" : "MyBucket" }
    }
  }
}

